<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.celulares.Registrar">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewRegistrar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:id="@+id/lblTitle"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/lblImei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imei" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtImei"
                android:inputType="number" />

            <TextView
                android:id="@+id/lblMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca" />

            <Spinner
                android:id="@+id/Marca_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblOs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Os" />

            <Spinner
                android:id="@+id/Os_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblSecondMiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color" />

            <Spinner
                android:id="@+id/Color_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtPrecio"
                android:inputType="number" />

            <TextView
                android:id="@+id/lblRam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ram" />

            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRam"
                    android:inputType="number" />

                <TextView
                    android:layout_width="1000dp"
                    android:layout_height="wrap_content"
                    android:text="Gb" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:textAlignment="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar"
                    android:elegantTextHeight="true"
                    android:textStyle="bold"
                    android:onClick="registrarEquipo" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpiar"
                    android:elegantTextHeight="true"
                    android:textStyle="bold"
                    android:onClick="borrar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
